        <td><%= @sco.score2 %></td>
      <%end%>

  </tr>
  <tr>
    <td>Quiz3</td>
      <%if @sco.score3==-1%>
      <td>Unattempted</td>
      <td>0</td>
      <%else%>
      <td>Attempted</td>
      <td><%= @sco.score3 %></td>
      <%end%>
  </tr>
  <tr>
    <td>Quiz4</td>
      <%if @sco.score4==-1%>
      <td>Unattempted</td>
      <td>0</td>
      <%else%>
      <td>Attempted</td>
      <td><%= @sco.score4 %></td>
      <%end%>

  </tr>
</table>
