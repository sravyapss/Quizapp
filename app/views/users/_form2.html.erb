<%= form_with(model: user, local: true) do |form| %>
<div class="field">
  <%= form.label :Username %>
  <%= form.text_field :name, id: :user_name %>
</div>

<div class="field">
  <%= form.label :Password %>
  <%= form.password_field :password, id: :user_password %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
